# Instagram Analytics Dashboard - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# Required API Keys
APIFY_TOKEN=your_apify_token_here
GEMINI_API_KEY=your_gemini_api_key_here

# Optional API Keys for Enhanced Features
INSTAGRAM_SESSION_ID=your_instagram_session_id_here
PROXY_URL=http://username:password@proxy-server:port
OPENAI_API_KEY=your_openai_api_key_here

# App Configuration
DEBUG_MODE=false
CACHE_ENABLED=true
MAX_POSTS_PER_REQUEST=100
DEFAULT_TIME_FILTER=Week
DEFAULT_SORT_BY=Likes

# Instagram Scraping Settings
SCRAPING_DELAY=2
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# AI Analysis Settings
AI_PROVIDER=gemini
ENABLE_CONTENT_ANALYSIS=true
ENABLE_TREND_PREDICTION=true

# UI/UX Settings
POSTS_PER_ROW=3
ENABLE_INFINITE_SCROLL=true
THEME=auto
